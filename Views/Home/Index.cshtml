@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Your Shop</h1>
</div>

<div class="text-center mt-4">
    <h2>Explore Our Products</h2>
    <p><a class="btn btn-primary-custom" href="/Products">Go to Products</a></p>
</div>

<div class="text-center mt-4">
    <h4>Current Weather in Kraków</h4>
    <p><a class="btn btn-primary-custom" href="/weather/WeatherPartial">Check Weather</a></p>
</div>

@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center mt-4">
        <h5>If you don't have an account yet</h5>
        <p><a class="btn btn-primary-custom" href="/Account/Register">Register Here</a></p>
    </div>
}
